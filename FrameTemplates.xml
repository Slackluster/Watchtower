<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">
	<Frame name="Watchtower_SettingsText" mixin="Watchtower_SettingsTextMixin" virtual="true">
		<Size y="28" />
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Text" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" x="37" y="-8" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<Button name="Watchtower_ListItem" virtual="true">
		<Size x="1000" y="1" />
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Text" inherits="GameFontNormal" justifyH="LEFT">
					<Anchors>
						<Anchor point="LEFT" x="0" />
					</Anchors>
					<Size x="1000" y="0" />
				</FontString>
			</Layer>
		</Layers>
	</Button>
</Ui>
