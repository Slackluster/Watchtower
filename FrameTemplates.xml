<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
	<Frame name="Watchtower_SettingsText" mixin="Watchtower_SettingsTextMixin" virtual="true">
		<Size y="28" />
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="LeftText" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" x="37" y="-8" />
					</Anchors>
				</FontString>
				<FontString parentKey="MiddleText" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" x="240" y="-8" />
					</Anchors>
				</FontString>
				<FontString parentKey="RightText" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" x="280" y="-8" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="Watchtower_SettingsExpandTemplate" inherits="SettingsExpandableSectionTemplate" mixin="Watchtower_SettingsExpandMixin" virtual="true">
		<Size y="24" />
	</Frame>

	<Button name="Watchtower_ListButton" virtual="true">
		<Size x="200" y="20" />
		<HighlightTexture atlas="Options_List_Hover" setAllPoints="true" />
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="LeftText1" inherits="GameFontNormal" justifyH="LEFT">
					<Anchors>
						<Anchor point="LEFT" x="2" />
					</Anchors>
					<Size x="400" y="24" />
				</FontString>
				<FontString parentKey="LeftText2" inherits="GameFontNormal" justifyH="LEFT" wordwrap="false">
					<Anchors>
						<Anchor point="LEFT" x="22" y="1" />
						<Anchor point="RIGHT" x="-22" />
					</Anchors>
					<Size x="400" y="24" />
				</FontString>
				<FontString parentKey="RightText" inherits="GameFontNormal" justifyH="RIGHT">
					<Anchors>
						<Anchor point="RIGHT" x="-5" />
					</Anchors>
					<Size x="400" y="24" />
				</FontString>
			</Layer>
		</Layers>
	</Button>

	<Button name="Watchtower_TrackerItem" virtual="true">
		<Size x="0" y="30" />
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Text" inherits="GameFontNormal" justifyH="LEFT">
					<Anchors>
						<Anchor point="LEFT" x="0" />
					</Anchors>
					<Size x="0" y="0" />
				</FontString>
			</Layer>
		</Layers>
	</Button>
</Ui>
